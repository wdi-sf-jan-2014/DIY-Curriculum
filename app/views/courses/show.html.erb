<div class="row">
  <div class="small-6 small-centered columns blocks">
    <br><br>
      <div class="course_cat_img"><%= image_tag(@course.category.img)%></div>

        <% if @current_user == @author %>
          <a href="#" data-reveal-id="edit-course">
          <h3 id="course_heading" ><%= @course.title %><h3></a>
        <% else %>
          <h3 id="course_heading2" ><%= @course.title %><h3>
        <% end %>

      <p id="course_description"><%= @course.description%><p>
      <%= render "edit"%>

      <div class="small-12 small-centered columns">
        <p id="course_by">By: <%= @author.name %></p>
      </div>

      <% if @enrolled %>
      <div id="toggles">
        <button class="button" id="unenroll">Unenroll</button>
        <button id="enroll" class="hidden button">Enroll</button>
      <% elsif @ownCourse %>
      <% else %>
      <div id="toggles">
        <button class="button" id="enroll">Enroll</button>
        <button id="unenroll" class="hidden button">Unenroll</button>
      </div>
      <% end %>
  </div>
</div>

  
<div class="row">
  <div class="small-6 small-centered columns">

    <div class="row">    
      <div class="small-5 small columns top-margin">
        <div class="row card-title">  
        <h4>Sections<h4>
        </div>
        <div class="row blocks">
          <% @course.sections.each do |s| %>
            <a href="/courses/<%= @course.id%>/sections/<%= s.id%>">
              <p id="indent_title"><%= s.title %></p>
            </a>
          <% end %>
        </div>
      </div>

      <div class="small-5 small columns top-margin">
        <div class="row card-title">
          <h4>Course at a Glance</h4>
        </div>

        <div class="row blocks">
          <p class="glance">Category: <%= @course.category.name %></p> 
          <p class="glance"><%= @course.sections.count %> Sections</p>
          <a href="#" data-reveal-id="enrollments">
            <p class="glance"><%= @course.users.count %> Enrollments</p>
          </a>
          <%= render "enrollments"%>
          <p class="glance"><div id="count_to"></div></p>
        </div>

  </div>
</div>

<style>
.course_cat_img{
text-align: center;  
}

#toggles{
text-align: center;
}

.course_cat_img img{
width:70px; 
}

.glance{
color:grey;
line-height: 100%;
}

.blocks {
background: white;
padding: 10px 70px 20px 70px;
margin-top: 50px;
box-shadow: rgba(0,0,0,.08) 0 1px 5px;
}


</style>
